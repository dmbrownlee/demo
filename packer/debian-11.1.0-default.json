{
  "variables": {
    "username": "vagrant",
    "password": "vagrant",
    "checksum": "sha256:8488abc1361590ee7a3c9b00ec059b29dfb1da40f8ba4adf293c7a30fa943eb2"
  },
  "builders": [{
    "vm_name": "debian-11.1.0-default",
    "type": "virtualbox-iso",
    "guest_os_type": "Debian_64",
    "iso_urls": [
      "/Users/student/Downloads/debian-11.1.0-amd64-netinst.iso",
      "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-11.1.0-amd64-netinst.iso",
      "http://cdimage.debian.org/mirror/cdimage/archive/11.1.0/amd64/iso-cd/debian-11.1.0-amd64-netinst.iso"
    ],
    "iso_checksum": "{{ user `checksum` }}",
    "iso_target_path": "/Users/student/Downloads/debian-11.1.0-amd64-netinst.iso",

    "http_directory" : ".",
    "http_port_min" : 9001,
    "http_port_max" : 9001,

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "60m",
    "headless": true,

    "cpus": "1",
    "memory": 1024,
    "disk_size" : "20480",
    "hard_drive_interface": "sata",
    "sata_port_count": 4,
    "hard_drive_nonrotational": true,

            
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--vram", "10"],
      ["modifyvm", "{{.Name}}", "--vrde", "off"],
      ["modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"],
      ["setextradata", "{{.Name}}", "GUI/ScaleFactor", "3.0"]
    ],
            "boot_wait": "10s",
    "boot_command": [
        "<esc><wait>",
        "install <wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-11.1.0-preseed.cfg <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
    ],
    "shutdown_command": "echo vagrant | sudo -S shutdown -P now"
  }],
  "provisioners": [
    {  "type": "file",
       "source": "/Users/student/keys/vagrant.pub",
       "destination": "/tmp/vagrant.pub"
    },
    {  "type": "shell",
       "inline": ["mkdir -m 0700 /home/vagrant/.ssh",
                  "mv /tmp/vagrant.pub /home/vagrant/.ssh/authorized_keys",
                  "chmod 644 /home/vagrant/.ssh/authorized_keys"]
    },
    {  "type": "shell",
       "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh -c '{{ .Path }}'",
       "inline": [ "echo 'vagrant ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/vagrant",
                  "chmod 0440 /etc/sudoers.d/vagrant"]
    },
    {  "type": "shell",
       "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh -c '{{ .Path }}'",
       "inline": [ "apt-get install -y python3-apt" ]
    },
    {  "type": "shell",
       "only": [ "virtualbox-iso" ],
       "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh -c '{{ .Path }}'",
       "inline": [ "mount -t iso9660 -o ro /home/vagrant/VBoxGuestAdditions.iso /mnt",
                   "cd /mnt",
                   "apt-get install -y linux-headers-$(uname -r)",
                   "./VBoxLinuxAdditions.run || /bin/true"]
    }
  ],
  "post-processors": [{
    "type": "vagrant",
    "output": "debian-11.1.0-default.box"
  }]
}
